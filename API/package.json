{
  "name": "gbf-api",
  "version": "1.0.0",
  "description": "Granblue Party REST API",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist && mkdir dist",
    "build-server": "babel src -d dist",
    "build": "npm run clean && npm run build-server",
    "serve": "export NODE_ENV=production&&node dist/index.js",
    "start": "nodemon --exec ./node_modules/.bin/babel-node src/index.js --watch src src/index.js",
    "postinstall": "node scripts/generate-config.js"
  },
  "author": {
    "name": "Minimalist",
    "email": "contact@granblue.party",
    "url": "https://www.granblue.party"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "lodash.debounce": "^4.0.8",
    "node-mailjet": "^6.0.8",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.4",
    "@babel/node": "^7.27.1",
